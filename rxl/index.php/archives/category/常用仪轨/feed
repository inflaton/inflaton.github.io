	<item>
		<title>放生仪轨甘露妙药</title>
		<link>http://rxl.xuefovip.com/index.php/archives/235075</link>
		<pubDate>Thu, 06 Aug 2015 01:13:18 +0000</pubDate>
		<dc:creator><![CDATA[admin]]></dc:creator>
